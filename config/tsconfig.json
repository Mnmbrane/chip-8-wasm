{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "./docs",
    "rootDir": "../"
  },
  "include": [
    "../src/web/src/**/*",
    "../*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "pkg",
    "target"
  ]
}
